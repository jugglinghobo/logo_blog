.post_content_box
  = post.content
  
  = post.responses.first(3).each do |response|
    = render "response", :response => response

- if signed_in?
  .actions
    = link_to 'Show', post
    = link_to 'Edit', edit_post_path(post)
    = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }
