%table
  - @posts.each do |post|
    %tr
      %td.header
        = post.content
      %td
        = post.user
      %td
        = link_to 'Show', post
      %td
        = link_to 'Edit', edit_post_path(post)
      %td
        = link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

#action_box
  = link_to 'New Post', new_post_path
